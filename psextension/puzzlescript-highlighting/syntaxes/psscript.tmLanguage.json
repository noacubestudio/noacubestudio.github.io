{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "puzzlescript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.psscript",
				"match": "\\b(objects|legend|sounds|collisionlayers|rules|winconditions|levels)\\b"
			}]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.block.psscript",
					"begin": "(",
					"end": ")"
				}
			]
		}
	},
	"scopeName": "source.puzzlescript"
}